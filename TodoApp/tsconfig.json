{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2018",
    "module": "none",
    "moduleResolution": "node",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.s?css$",
          "camelCase": "dashes"
        }
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
